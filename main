/*-------------------------------------------------------------------------------------------------------------*/
//sample driver to try comp and decomp functions
/*-------------------------------------------------------------------------------------------------------------*/
//xml_editor compress -i input_file.xml -o output_file.comp
//xml_editor decompress -i input_file.comp -o output_file.xml
/*-------------------------------------------------------------------------------------------------------------*/


#include"compression/function/header.h"
bool check_command(vector<string>& command) {
	
	if (
		command[0] == "xml_editor" &&
		(
		command[1] == "compress" || 
		command[1] == "decompress"||
		command[1] == "verify" ||
		command[1] == "format" ||
		command[1] == "json"||
		command[1] == "mini"
		)&&
		command[2] == "-i" &&
		command[4] == "-o"
		)
	{
		return 0;
	}
	return 1;
}
int main() {
	vector<string> command = get_command();
	if (check_command(command)) { cout << "Wrong format";return 1; }
	
	comp_decomp_mode(command);
}

